<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= object.errors.count %><%= t('errors.error_count') %>
    </div>
    <ul class="text-error px-10 list-disc">
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>